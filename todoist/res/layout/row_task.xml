<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" android:padding="10dp">

    <TextView
            android:id="@+id/tvtaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/taskname"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
            android:id="@+id/tvEnddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvtaskName"
            android:text="@string/enddate"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvtaskName"
            android:id="@+id/doneBox"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false" android:gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true" android:checked="false" android:focusableInTouchMode="false"
            android:focusable="false"/>

</RelativeLayout>