<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textViewRegisterInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewTaskRowDone"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
       android:id="@+id/editTextRegisterName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/textViewRegisterName"
       android:ems="10" >

    </EditText>

    <TextView
        android:id="@+id/textViewRegisterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextRegisterName"
        android:layout_below="@+id/editTextRegisterName"
        android:layout_marginTop="25dp"
        android:text="Email:" />

    <EditText
        android:id="@+id/editTextRegisterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewRegisterEmail"
        android:layout_alignRight="@+id/editTextRegisterName"
        android:layout_below="@+id/textViewRegisterEmail"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageViewTaskRowDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textViewRegisterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextRegisterName"
        android:layout_below="@+id/textViewRegisterInfo"
        android:text="Name:" />

    <TextView
        android:id="@+id/textViewRegisterPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextRegisterEmail"
        android:layout_below="@+id/editTextRegisterEmail"
        android:layout_marginTop="25dp"
        android:text="Password:" />

    <EditText
        android:id="@+id/editTextRegisterPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewRegisterPassword1"
        android:layout_alignRight="@+id/editTextRegisterEmail"
        android:layout_below="@+id/textViewRegisterPassword1"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textViewRegisterPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextRegisterPassword1"
        android:layout_below="@+id/editTextRegisterPassword1"
        android:layout_marginTop="31dp"
        android:text="Password(Please confirm):" />

    <EditText
        android:id="@+id/editTextRegisterPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewRegisterPassword2"
        android:layout_alignRight="@+id/editTextRegisterPassword1"
        android:layout_below="@+id/textViewRegisterPassword2"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextRegisterPassword2"
        android:layout_alignRight="@+id/editTextRegisterPassword2"
        android:layout_below="@+id/editTextRegisterPassword2"
        android:layout_marginTop="36dp"
        android:text="Register" />

    <Button
        android:id="@+id/buttonRegisterLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonRegister"
        android:layout_alignRight="@+id/buttonRegister"
        android:layout_below="@+id/buttonRegister"
        android:text="Sign in for existing Account" />

</RelativeLayout>
</ScrollView>
