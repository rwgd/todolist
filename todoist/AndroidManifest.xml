<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.thm.todoist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.thm.todoist.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.thm.todoist.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="de.thm.todoist.TaskActivity"
            android:label="@string/title_activity_task" >
        </activity>
        <activity
            android:name="de.thm.todoist.SingleTaskActivity"
            android:label="@string/title_activity_single_task" >
        </activity>
        <activity
            android:name="de.thm.todoist.NewTaskActivity"
            android:label="@string/title_activity_new_task" >
        </activity>
        
      <activity android:name="de.thm.todoist.FilePickerActivity"
                android:label="@string/app_name"/>
      
 
    </application>

</manifest>
